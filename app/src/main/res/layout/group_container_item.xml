<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/description_rounded_corners"
    android:layout_margin="20dp"> <!-- Margin for the LinearLayout -->

    <ImageView
        android:id="@+id/group_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/group_icon_round"
        android:contentDescription="@string/group_image_description" />

    <TextView
        android:id="@+id/group_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/group_name"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@android:color/black" />
</LinearLayout>
